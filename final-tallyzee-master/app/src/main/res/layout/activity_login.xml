<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#964178"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/li"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="200sp">


        <ImageView
            android:layout_marginTop="0dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:src="@drawable/tallyzee_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/li"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_email"
            android:hint="UserID"
            android:layout_centerHorizontal="true"
            android:textColorHint="#40ffffff"
            android:background="@drawable/custom_edittext"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_width="300dp"
            android:layout_height="40dp" />



        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/et_email"
            android:inputType="textPassword"
            android:textColorHint="#40ffffff"
            android:id="@+id/et_password"
            android:layout_centerHorizontal="true"
            android:hint="Password"
            android:background="@drawable/custom_edittext"
            android:textSize="14sp"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_width="300dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/forget"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_email"
            android:layout_below="@+id/et_password"
            android:text="Forget Password"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:layout_below="@+id/forget"
            android:background="@drawable/custom_button"
            android:id="@+id/btn_server_login"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="Sign In"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:layout_gravity="center"
            android:layout_width="187dp"
            android:layout_height="38dp" />


        <TextView
            android:id="@+id/dont"
            android:layout_below="@+id/btn_server_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="Don't have an account?"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/dont"
            android:layout_centerHorizontal="true"
            android:id="@+id/ll_sign_up"
            android:textColor="#7B87F8"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="Sign Up Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
