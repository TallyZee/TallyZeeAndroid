<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    android:layout_height="match_parent"
    android:background="#964178">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/closePage"
            android:src="@drawable/ic_arrow_back_white_24px"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <ImageView
            android:id="@+id/imagee"
            android:layout_centerHorizontal="true"
            android:src="@drawable/reset_password"
            android:layout_marginTop="60sp"
            android:layout_gravity="center"
            android:layout_width="73dp"
            android:layout_height="73dp" />


        <TextView
            android:id="@+id/asas"
            android:layout_centerInParent="true"
            android:layout_below="@+id/imagee"
            android:layout_marginTop="20sp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="Reset your password"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/asass"
            android:layout_below="@+id/asas"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="We have sent a four digit code on your"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/asasasa"
            android:layout_below="@+id/asass"
            android:layout_centerInParent="true"
            android:layout_marginTop="5sp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="phone/email"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





        <android.support.design.widget.TextInputEditText
            android:layout_centerInParent="true"
            android:layout_below="@+id/asasasa"
            android:inputType="number"
            android:textSize="14sp"
            android:id="@+id/otp"
            android:hint="6 digit code (OTP)."
            android:textColor="#fff"
            android:textColorHint="#40ffffff"
            android:background="@drawable/custom_edittext"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_width="300dp"
            android:layout_height="40dp" />

        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/otp"
            android:layout_centerInParent="true"
            android:inputType="textPassword"
            android:id="@+id/newPassword"
            android:textSize="14sp"
            android:hint="New Password"
            android:textColor="#fff"
            android:textColorHint="#40ffffff"
            android:background="@drawable/custom_edittext"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_width="300dp"
            android:layout_height="40dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/confirmPass"
            android:layout_below="@+id/newPassword"
            android:layout_centerInParent="true"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:hint="Confirm Password"
            android:textColor="#fff"
            android:textColorHint="#40ffffff"
            android:background="@drawable/custom_edittext"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_width="300dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/resetDone"
        android:textColor="#fff"
        android:text="Continue"
        android:background="@drawable/custom_button"
        android:layout_gravity="center"
        android:layout_marginTop="120sp"
        android:layout_width="187dp"
        android:layout_height="40dp" />


</RelativeLayout>