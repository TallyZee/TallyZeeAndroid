<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="200dp">






        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:text="Are you sure? "
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="50dp"
    android:textSize="18sp"
    android:fontFamily="@font/roboto_regular"
    android:text="Logging out will delete data of all companies from the TallyZee app . However this won't affect your tally data."
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:textColor="#964178"
        android:layout_marginTop="150dp"
        android:id="@+id/noButton"
        android:background="@drawable/custom_logout_button"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18sp"
        android:layout_marginStart="140dp"
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

        <TextView
            android:textColor="#964178"
            android:layout_marginTop="150dp"
            android:id="@+id/yesButton"
            android:layout_marginStart="230sp"
            android:background="@drawable/custom_logout_button"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />




</android.support.v7.widget.CardView>