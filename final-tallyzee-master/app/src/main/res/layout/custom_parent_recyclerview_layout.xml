<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:cardBackgroundColor="#e7e7e7"
    android:layout_margin="@dimen/dp_12"
    android:id="@+id/single_card"
    android:layout_height="130dp"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:background="#edd0f1"
                android:id="@+id/uppar"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_18"
                app:srcCompat="@drawable/ic_user" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="13sp"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/contnt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="@dimen/dp_8"
            android:elevation="@dimen/dp_8">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/relative1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background=" #fff">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image1"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_rupee_indian"
                        android:tint="@color/black"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/image1"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 120000.0"
                        android:layout_weight="1"
                        android:textSize="8sp"/>


                </LinearLayout>

                <View
                    android:layout_toEndOf="@+id/relative1"
                    android:id="@+id/Space"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#e7e7e7" />
                <LinearLayout
                    android:layout_toEndOf="@+id/Space"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background=" #fff">

                    <ImageView
                        android:id="@+id/pandl"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:src="@drawable/ic_down"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/pandl"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/parcentage"
                        android:layout_width="40sp"
                        android:layout_height="wrap_content"
                        android:text=" 12.5 %"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:layout_weight="0"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>



</android.support.v7.widget.CardView>
