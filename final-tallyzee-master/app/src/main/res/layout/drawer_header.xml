<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/bg_design"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/tv_email"
        style="@style/TextStyle.Title.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"
        android:layout_alignEnd="@+id/tv_name"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_name"
        android:text="gulshanpadhan@gmail.com" />
    <TextView
        android:id="@+id/tv_name"
        style="@style/TextStyle.Title"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_above="@id/tv_email"
        android:text="MTally" />

    <ImageView
        android:id="@+id/iv_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_profile_edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>