<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item"
    android:layout_margin="@dimen/dp_8"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/avenirltstd_medium"
        android:text="IPhone X"/>

    <RelativeLayout
        android:id="@+id/quantity"
        android:layout_below="@id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sign"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_rupee_indian"
            android:tint="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_toEndOf="@id/sign"
            android:textColor="@color/colorPrimary"
            android:text="72,435"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/productID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity">
        <TextView
            android:id="@+id/title_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirltstd_medium"
            android:text="Avg Pur Rate:"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@id/title_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sign_avg"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_rupee_indian"
                android:tint="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/avg_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/sign_avg"
                android:textColor="@color/colorPrimary"
                android:text="290.33"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cgst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productID">
        <TextView
            android:id="@+id/std_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Std Cost:"/>
        <RelativeLayout
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@id/std_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sign_std_cost"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_rupee_indian"
                android:tint="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/stdCost_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/sign_std_cost"
                android:textColor="@color/colorPrimary"
                android:text="66"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sgst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cgst">
        <TextView
           android:id="@+id/std_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Std Price:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_12"
            />
        <RelativeLayout
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@id/std_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sign_std_price"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_rupee_indian"
                android:tint="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/stdCost_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/sign_std_price"
                android:textColor="@color/colorPrimary"
                android:text="66"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order1"
        android:layout_below="@id/sgst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Reorder:"/>
        <TextView
            android:id="@+id/reorder_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/reorder"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:text="1,000"/>
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_toEndOf="@id/reorder_amount"
            android:layout_height="10dp"
            android:layout_margin="@dimen/dp_4"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/min-order"
            android:layout_toEndOf="@id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Min-Order:"/>
        <TextView
            android:id="@+id/min-order-amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/min-order"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:text="500"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/amount"
            android:text="350"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nos"
            android:layout_below="@id/amount"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Nos"
            android:textSize="12sp"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/order1"
        android:layout_margin="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F2F1F1"/>


</RelativeLayout>
