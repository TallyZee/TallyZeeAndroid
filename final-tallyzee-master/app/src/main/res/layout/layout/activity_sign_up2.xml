<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_arrow_back_white_24px"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/logo"
            style="@style/TextStyle.Heading"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/logo"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="20sp"
            tools:ignore="InvalidId" />

        <LinearLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/logo"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_8">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_user"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/avenirltstd_medium"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    android:layout_marginLeft="45dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_email"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:cursorVisible="true"
                        android:gravity="center|left|bottom"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:maxLength="50"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_8">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_user"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/avenirltstd_medium"

                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    android:layout_marginLeft="45dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_name"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:cursorVisible="true"
                        android:gravity="center|left|bottom"
                        android:hint="@string/name"
                        android:inputType="text"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:maxLength="50"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_8">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_user"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/avenirltstd_medium"

                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    android:layout_marginLeft="45dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_mobile"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:cursorVisible="true"
                        android:gravity="center|left|bottom"
                        android:hint="@string/ip_port"
                        android:inputType="number"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:maxLength="50"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_8">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_user"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/avenirltstd_medium"

                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    android:layout_marginLeft="45dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_password"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:cursorVisible="true"
                        android:gravity="center|left|bottom"
                        android:hint="@string/password"
                        android:inputType="text"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:maxLength="50"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_8">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_user"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/avenirltstd_medium"

                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    android:layout_marginLeft="45dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_cnf_password"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:cursorVisible="true"
                        android:gravity="center|left|bottom"
                        android:hint="@string/conf_password"
                        android:inputType="text"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:maxLength="50"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black_effective"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_server_login"
                android:layout_marginTop="20dp"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/ic_user"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
