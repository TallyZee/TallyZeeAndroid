<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_height="120dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageee"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/avenirltstd_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="MOHIT SOLUTION "
            android:id="@+id/partyName"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/totalqty"
            android:layout_toEndOf="@+id/imageee"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />



        <TextView
            android:fontFamily="@font/avenirltstd_medium"
            android:textColor="@color/colorPrimary"
            android:id="@+id/totalqty"
            android:textSize="18sp"
            android:text="Total Qty"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_toStartOf="@+id/lastSold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/partyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/avenirltstd_medium"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/partyName"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="Last sold :18 Jul 18"
            android:id="@+id/lastSold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:fontFamily="@font/avenirltstd_medium"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/totalqty"
            android:layout_marginTop="5dp"
            android:id="@+id/unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1 Nos"
            android:textSize="16sp" />


        <TextView
            android:fontFamily="@font/avenirltstd_medium"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/lastSold"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="Rate:"
            android:id="@+id/rate"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />



    </RelativeLayout>









</android.support.v7.widget.CardView>